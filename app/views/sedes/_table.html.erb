
<h2 class="mt-3">Todas las sedes</h2>

<%= link_to new_sede_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar sede
  <%= fa_icon "plus" %>
<% end %>


<table class="table table-respnsive">
    <tr>
      <thead class="thead-dark">
        <th>codigo</th>
        <th>Direccion</th>
        <th>Acciones</th>
      </thead>
    </tr>
  <% @sede.each do |sede|  %>
    <tr>
      <td> <%= sede.codigo %> </td>
      <td> <%= sede.direccion %> </td>

      <td>
        <%= link_to sede_path(sede), class:"btn btn-success btn-sm" do %>
          <%= fa_icon "eye" %>
          Mostrar
        <% end %>

        <%= link_to edit_sede_path(sede), class: "btn btn-warning btn-sm" do %>
          <%= fa_icon('pencil') %>
          Editar
        <% end %>

        <%= link_to sede_path(sede),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar esta sede?"} do %>
          <%= fa_icon "trash" %>
          Eliminar
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
