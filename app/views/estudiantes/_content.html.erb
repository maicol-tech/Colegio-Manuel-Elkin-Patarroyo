
<%= link_to new_estudiante_path, class: "btn btn-info btn-sm mb-3" do %>
  Registrar Estudiante
  <%= fa_icon "plus" %>
<% end %>


<table class="table table-respnsive">
    <tr>
      <thead class="thead-dark">
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Direccion</th>
        <th>Telefono</th>
        <th>Correo</th>
        <th>Acciones</th>
      </thead>
    </tr>
  <% @estudiantes.each do |estudiante|  %>
    <tr>
      <td> <%= estudiante.nombre %> </td>
      <td> <%= estudiante.apellido %> </td>
      <td> <%= estudiante.direccion %> </td>
      <td> <%= estudiante.telefono %> </td>
      <td> <%= estudiante.correo %> </td>
      
      <td>
        <%= link_to estudiante_path(estudiante), class:"btn btn-success btn-sm" do %>
          <%= fa_icon "eye" %>
          Mostrar
        <% end %>

        <%= link_to edit_estudiante_path(estudiante), class: "btn btn-warning btn-sm" do %>
          <%= fa_icon('pencil') %>
          Editar
        <% end %>

        <%= link_to estudiante_path(estudiante),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar este estudiante?"} do %>
          <%= fa_icon "trash" %>
          Eliminar
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
